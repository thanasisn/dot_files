# Show sxhkdrc keybinds
mod4 + F1
    "$HOME/.config/sxhkd/sxhkdrc_keybinds.sh" "$HOME/.config/sxhkd/sxhkdrc"

# Reload sxhkd configuration
mod4 + Escape
	pkill -USR1 -x sxhkd; notify-send -t 3000 "sxhkd reloaded"

# Shell Terminal
mod4 + {z,ζ}
    lxterminal
    # x-terminal-emulator

# Floating Shell Terminal
